{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es5",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "types": [
    ]
  },
  "exclude": [
    "node_modules",
    "demo",
    "dist",
    "compiled",
    "spec"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
